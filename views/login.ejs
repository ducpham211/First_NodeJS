<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Leckerli+One&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Miniver&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="styleForLogin.css">
    <title>Document</title>
</head>
<body>
    <section class="loginForm">
        <div class="container">
            <h1>Log in</h1>
            <form action="/login" method="POST">
                <div class="input-container">
                    <input type="text" id="username" name="username" placeholder=" " required>
                    <label for="username">Username</label>
                </div>
                <div class="input-container">
                    <div class="password-container">
                        <input type="password" id="password" name="password" placeholder=" " required>
                        <label for="password">Password</label>
                        <button type="button" class="hide-password"><i class="fa-solid fa-eye-slash"></i></button>
                    </div>                      
                </div>          
                <button type="submit" class="loginButton">Log in</button>                    
            </form>
            <form action="/registerForm" method="POST">
                <div class="register-link">
                    <p>Don't have an account?</p>
                    <button type="submit" class="registerButton">Register</button>
                </div>
            </form>
        </div>
    </section>
    <script>
        const passwordInput = document.getElementById('password');
        const toggleButton = document.querySelector('.hide-password');
        const toggleIcon = toggleButton.querySelector('i');

        toggleButton.addEventListener('click', () => {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            }
        });
    </script>
</body>
</html>